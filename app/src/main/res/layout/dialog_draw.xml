<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="450dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/card_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/dialog_win_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/draw_game"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_title_size"
                android:layout_above="@id/iv_frdzone"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/pixelmix_bold"
                />
            <ImageView
                android:id="@+id/iv_frdzone"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_centerInParent="true"
                android:layout_marginVertical="20dp"
                android:src="@drawable/friendzone"
                />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bedge"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            android:scaleX="3"
            android:scaleY="3"
            app:lottie_rawRes="@raw/sleeping_cat_lottie"
            android:layout_above="@id/btn_win_ok"
            android:layout_alignParentEnd="true"
            />


        <Button
            android:id="@+id/btn_win_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/win_continue"
            android:backgroundTint="#FF610F"
            android:fontFamily="@font/pixelmix"
            android:layout_below="@id/iv_frdzone"
            android:layout_marginTop="@dimen/continue_btn_margin"
            android:layout_centerHorizontal="true"
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>